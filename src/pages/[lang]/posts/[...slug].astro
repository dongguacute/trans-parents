---
import Layout from '../../../layouts/Layout.astro';
import Navigation from '../../../components/Navigation.astro';
import { getAllPosts, getRelatedPosts, getArticlePosition, getPostRender, type Post } from '../../../utils/posts';

export async function getStaticPaths() {
  const languages = ['zh-hans', 'zh-hant'];
  const paths = [];

  for (const lang of languages) {
    const posts = await getAllPosts(lang);
    for (const post of posts) {
      paths.push({
        params: {
          lang: lang,
          slug: post.slug
        },
        props: { post },
      });
    }
  }

  return paths;
}

type Props = {
  post: Post;
};

const { post } = Astro.props as Props;
const lang = Astro.params.lang || 'zh-hans';
const { Content } = await getPostRender(post.slug, lang);

// 獲取相關文章用於預取
const relatedPosts = await getRelatedPosts(post, 3, lang);

// 获取文章在group中的位置信息
const positionInfo = await getArticlePosition(post.slug, lang);
---

<Layout title={`${post.data.title} - Trans Parents`}>
  <Navigation />

  <article class="post-content">
    <header class="post-header">
      <h1>{post.data.title}</h1>
      <div class="post-meta">
        <time>{new Date(post.data.date).toLocaleDateString('zh-TW')}</time>
        {post.data.category && <span class="category">{post.data.category}</span>}
        {post.data.tags && (
          <div class="tags">
            {post.data.tags.map((tag: string) => <span class="tag">{tag}</span>)}
          </div>
        )}
      </div>
      {post.data.description && <p class="description">{post.data.description}</p>}
    </header>

    <div class="post-body" id="post-content">
      <Content />
    </div>

    <!-- Group文章导航 - 放在底部 -->
    {positionInfo && (
      <nav class="group-navigation">
        <div class="group-header" style={`border-left-color: ${positionInfo.groupInfo?.color}`}>
          <h3>
            {positionInfo.groupInfo?.name || '相关文章'}
            <span class="position-badge" style={`background: ${positionInfo.groupInfo?.color}`}>
              {positionInfo.currentIndex + 1} / {positionInfo.total}
            </span>
          </h3>
        </div>
        
        <div class="group-articles-list">
          {positionInfo.groupPosts.map((groupPost, index) => (
            <a
              href={`/posts/${groupPost.slug}`}
              class={`group-article-item ${groupPost.slug === post.slug ? 'current' : ''}`}
              aria-current={groupPost.slug === post.slug ? 'page' : undefined}
              style={groupPost.slug === post.slug ? `background: linear-gradient(135deg, ${positionInfo.groupInfo?.color || '#E91E63'} 0%, ${positionInfo.groupInfo?.color || '#E91E63'}dd 100%); border-color: ${positionInfo.groupInfo?.color}` : ''}
            >
              <span class="article-number" style={groupPost.slug === post.slug ? '' : `background: ${positionInfo.groupInfo?.color}`}>{index + 1}</span>
              <span class="article-title">{groupPost.data.title}</span>
              {groupPost.slug === post.slug && (
                <span class="current-indicator">当前</span>
              )}
            </a>
          ))}
        </div>

        <div class="group-navigation-buttons">
          {positionInfo.prevArticle ? (
            <a href={`/posts/${positionInfo.prevArticle.slug}`} class="nav-button prev">
              <span class="nav-arrow" style={`color: ${positionInfo.groupInfo?.color}`}>←</span>
              <span class="nav-text">
                <span class="nav-label">上一篇</span>
                <span class="nav-title">{positionInfo.prevArticle.data.title}</span>
              </span>
            </a>
          ) : (
            <div class="nav-button disabled"></div>
          )}
          
          {positionInfo.nextArticle ? (
            <a href={`/posts/${positionInfo.nextArticle.slug}`} class="nav-button next">
              <span class="nav-text">
                <span class="nav-label">下一篇</span>
                <span class="nav-title">{positionInfo.nextArticle.data.title}</span>
              </span>
              <span class="nav-arrow" style={`color: ${positionInfo.groupInfo?.color}`}>→</span>
            </a>
          ) : positionInfo.nextGroupFirstArticle ? (
            <a href={`/posts/${positionInfo.nextGroupFirstArticle.slug}`} class="nav-button next next-group" style={`border-color: ${positionInfo.nextGroupFirstArticle.groupInfo.color}`}>
              <span class="nav-text">
                <span class="nav-label" style={`color: ${positionInfo.nextGroupFirstArticle.groupInfo.color}`}>
                  下一章节：{positionInfo.nextGroupFirstArticle.groupInfo.name}
                </span>
                <span class="nav-title">{positionInfo.nextGroupFirstArticle.data.title}</span>
              </span>
              <span class="nav-arrow" style={`color: ${positionInfo.nextGroupFirstArticle.groupInfo.color}`}>→</span>
            </a>
          ) : (
            <div class="nav-button disabled"></div>
          )}
        </div>
      </nav>
    )}
  </article>

  <!-- 相關文章預取和顯示 -->
  {relatedPosts.length > 0 && (
    <aside class="related-posts">
      <h3>相关文章</h3>
      <div class="related-posts-grid">
        {relatedPosts.map((relatedPost) => (
          <a href={`/posts/${relatedPost.slug}`} class="related-post-card">
            <h4>{relatedPost.data.title}</h4>
            {relatedPost.data.description && (
              <p>{relatedPost.data.description}</p>
            )}
          </a>
        ))}
      </div>
    </aside>
  )}
</Layout>

