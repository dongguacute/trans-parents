---
export interface Props {
  title: string;
  open?: boolean;
}

const { title, open = false } = Astro.props;
const contentId = `expandable-${Math.random().toString(36).substr(2, 9)}`;
---

<div class="expandable-content">
  <button
    class="expandable-toggle"
    aria-expanded={open}
    aria-controls={contentId}
    onclick={`toggleExpandable('${contentId}')`}
  >
    <span class="toggle-icon">{open ? '▼' : '▶'}</span>
    <span class="toggle-title">{title}</span>
  </button>
  <div
    id={contentId}
    class="expandable-body"
    style={`display: ${open ? 'block' : 'none'};`}
  >
    <slot />
  </div>
</div>

<script>
  function toggleExpandable(contentId: string) {
    const button = document.querySelector(`[aria-controls="${contentId}"]`) as HTMLButtonElement;
    const content = document.getElementById(contentId);
    if (!button || !content) return;

    const isExpanded = button.getAttribute('aria-expanded') === 'true';
    button.setAttribute('aria-expanded', (!isExpanded).toString());
    content.style.display = isExpanded ? 'none' : 'block';

    const icon = button.querySelector('.toggle-icon');
    if (icon) {
      icon.textContent = isExpanded ? '▶' : '▼';
    }
  }

  // Make function globally available
  (window as any).toggleExpandable = toggleExpandable;
</script>

<style>
  .expandable-content {
    border: 1px solid var(--color-border);
    border-radius: 8px;
    margin: 1rem 0;
    overflow: hidden;
  }

  .expandable-toggle {
    width: 100%;
    background: var(--color-card);
    border: none;
    padding: 1rem;
    text-align: left;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: background-color 0.2s ease;
  }

  .expandable-toggle:hover {
    background: var(--color-border);
  }

  .toggle-icon {
    font-size: 0.8rem;
    color: var(--color-accent-secondary);
    transition: transform 0.2s ease;
  }

  .toggle-title {
    font-weight: 500;
    color: var(--color-text);
  }

  .expandable-body {
    padding: 1rem;
    background: var(--color-background);
    border-top: 1px solid var(--color-border);
    line-height: 1.6;
  }

  .expandable-body :global(p) {
    margin: 0 0 1rem 0;
  }

  .expandable-body :global(p:last-child) {
    margin-bottom: 0;
  }

  .expandable-body :global(ul), .expandable-body :global(ol) {
    margin: 1rem 0;
    padding-left: 1.5rem;
  }

  .expandable-body :global(li) {
    margin-bottom: 0.5rem;
  }

  .expandable-body :global(code) {
    background: var(--color-card);
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-family: 'Monaco', 'Menlo', monospace;
    font-size: 0.9em;
  }

  .expandable-body :global(pre) {
    background: var(--color-card);
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 1rem 0;
    border: 1px solid var(--color-border);
  }

  .expandable-body :global(pre code) {
    background: none;
    padding: 0;
  }

  .expandable-body :global(blockquote) {
    border-left: 4px solid var(--color-accent-secondary);
    padding-left: 1rem;
    margin: 1rem 0;
    color: var(--color-text-secondary);
    font-style: italic;
  }
</style>