---
export interface Props {
  title: string;
  open?: boolean;
}

const { title, open = false } = Astro.props;
const contentId = `expandable-${Math.random().toString(36).substr(2, 9)}`;
---

<div class="expandable-content">
  <button
    class="expandable-toggle"
    aria-expanded={open}
    aria-controls={contentId}
    onclick={`toggleExpandable('${contentId}')`}
  >
    <span class="toggle-icon">{open ? '▼' : '▶'}</span>
    <span class="toggle-title">{title}</span>
  </button>
  <div
    id={contentId}
    class="expandable-body"
    style={`display: ${open ? 'block' : 'none'};`}
  >
    <slot />
  </div>
</div>


<style>
  .expandable-content {
    border: 1px solid var(--color-border, #dee2e6);
    border-radius: 8px;
    margin: 1rem 0;
    overflow: hidden;
  }

  .expandable-toggle {
    width: 100%;
    background: var(--color-card, #ffffff);
    border: none;
    padding: 1rem;
    text-align: left;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: background-color 0.2s ease;
  }

  .expandable-toggle:hover {
    background: var(--color-hover, #f8f9fa);
  }

  .toggle-icon {
    font-size: 0.8rem;
    color: var(--color-accent-secondary, #E91E63);
    transition: transform 0.2s ease;
  }

  .toggle-title {
    font-weight: 500;
    color: var(--color-text, #000000);
 }

  .expandable-body {
    padding: 1rem;
    background: var(--color-bg, #ffffff);
    border-top: 1px solid var(--color-border, #dee2e6);
    line-height: 1.6;
  }

  .expandable-body :global(p) {
    margin: 0 0 1rem 0;
  }

  .expandable-body :global(p:last-child) {
    margin-bottom: 0;
  }

  .expandable-body :global(ul), .expandable-body :global(ol) {
    margin: 1rem 0;
    padding-left: 1.5rem;
 }

  .expandable-body :global(li) {
    margin-bottom: 0.5rem;
  }

  .expandable-body :global(code) {
    background: var(--color-code-inline-bg, #f1f3f4);
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-family: 'Monaco', 'Menlo', monospace;
    font-size: 0.9em;
  }

  .expandable-body :global(pre) {
    background: var(--color-card, #ffffff);
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 1rem 0;
    border: 1px solid var(--color-border, #dee2e6);
  }

  .expandable-body :global(pre code) {
    background: none;
    padding: 0;
  }

  .expandable-body :global(blockquote) {
    border-left: 4px solid var(--color-accent-secondary, #E91E63);
    padding-left: 1rem;
    margin: 1rem 0;
    color: var(--color-text-secondary, #6c757d);
    font-style: italic;
  }
</style>