---
interface Props {
  type: 'info' | 'warning' | 'error' | 'success';
  title?: string;
}

const { type, title } = Astro.props;
---

<div class={`alert alert-${type}`}>
  <div class="alert-icon">
    {type === 'info' && (
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M12 2C6.48 2 2 6.48 2 12C2 17.52 6.48 22 12 22C17.52 22 22 17.52 22 12C22 6.48 17.52 2 12 2ZM13 17H11V11H13V17ZM13 9H11V7H13V9Z" fill="currentColor"/>
      </svg>
    )}
    {type === 'warning' && (
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M1 21H23L12 2L1 21ZM13 18H11V16H13V18ZM13 14H11V10H13V14Z" fill="currentColor"/>
      </svg>
    )}
    {type === 'error' && (
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M12 2C6.47 2 2 6.47 2 12C2 17.53 6.47 22 12 22C17.53 22 22 17.53 22 12C22 6.47 17.53 2 12 2ZM17 15.59L15.59 17L12 13.41L8.41 17L7 15.59L10.59 12L7 8.41L8.41 7L12 10.59L15.59 7L17 8.41L13.41 12L17 15.59Z" fill="currentColor"/>
      </svg>
    )}
    {type === 'success' && (
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M12 2C6.48 2 2 6.48 2 12C2 17.52 6.48 22 12 22C17.52 22 22 17.52 22 12C22 6.48 17.52 2 12 2ZM10 17L5 12L6.41 10.59L10 14.17L17.59 6.58L19 8L10 17Z" fill="currentColor"/>
      </svg>
    )}
  </div>
  <div class="alert-content">
    {title && <div class="alert-title">{title}</div>}
    <div class="alert-body">
      <slot />
    </div>
  </div>
</div>

<style>
  .alert {
    display: flex;
    gap: 0.75rem;
    padding: 1rem;
    border-radius: 8px;
    margin: 1rem 0;
    border-left: 4px solid;
  }

  .alert-info {
    background-color: var(--color-info-bg, #e3f2fd);
    border-left-color: var(--color-info-border, #2196f3);
    color: var(--color-info-text, #0d47a1);
  }

  .alert-warning {
    background-color: var(--color-warning-bg, #fff3e0);
    border-left-color: var(--color-warning-border, #ff9800);
    color: var(--color-warning-text, #e65100);
  }

  .alert-error {
    background-color: var(--color-error-bg, #ffebee);
    border-left-color: var(--color-error-border, #f44336);
    color: var(--color-error-text, #b71c1c);
  }

  .alert-success {
    background-color: var(--color-success-bg, #e8f5e8);
    border-left-color: var(--color-success-border, #4caf50);
    color: var(--color-success-text, #1b5e20);
  }

  .alert-icon {
    flex-shrink: 0;
    margin-top: 0.125rem;
  }

  .alert-content {
    flex: 1;
  }

  .alert-title {
    font-weight: 600;
    margin-bottom: 0.25rem;
    font-size: 1rem;
  }

  .alert-body {
    font-size: 0.9rem;
    line-height: 1.5;
  }

  .alert-body :global(p) {
    margin: 0;
  }

  .alert-body :global(p + p) {
    margin-top: 0.5rem;
  }
</style>